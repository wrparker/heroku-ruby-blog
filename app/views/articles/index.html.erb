<div class='container'>
<h1>Blog Entries</h1>
<hr>

<% @articles.each do |article| %>
  <h2><%= link_to article.title, article_path(article) %></h2>
  <h3>Written by: <%= article.author%></h3>
  <h4> Location: <%= article.location%></h4>
  <p> <%= article.body.split[0...25].join(' ') %>...</p>
    <p><%= link_to 'Read full report...', article_path(article) %> </p>
<% end %>
</div>
